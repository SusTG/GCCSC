<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.1.0" client="site" method="upgrade">
	<name>Nivo Slider</name>
	<author>Susana E. Tejerina Guerra</author>
	<creationDate>November 2013</creationDate>
	<authorEmail>ssn_yio@hotmail.com</authorEmail>
	<version>1.5.1</version>
	<description>
		Permite incluir galerias de imagenes usando Nivo Slider.
	</description>
	<files>
		<filename module="mod_nivoslider">mod_nivoslider.php</filename>
		<filename>helper.php</filename>
		<filename>mod_nivoslider.xml</filename>
		<filename>es-ES.mod_nivoslider.ini</filename>
		<filename>tmpl/default.php</filename>
		<filename>scripts/jquery.nivo.slider.pack.js</filename>
	</files>
	<languages>
		<language tag="es-ES">es-ES.mod_nivoslider.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					type="text"
					name="carpeta"
					label="CARPETA IMAGENES"
					size="50"
					default=""
					description="DESCCARPETAIMAGENES"
					/>
				<field
					type="textarea"
					name="imagenes"
					label="IMAGENES"
					rows="4"
					cols="50"
					description="DESCIMAGENES"
					default=""
					/>
			</fieldset>
		</fields>
	</config>
</extension>
